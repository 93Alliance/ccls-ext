{
	"name": "cclsext",
	"displayName": "cclsext",
	"description": "ccls extensions",
	"publisher": "flywine",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.59.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:c",
		"onLanguage:cpp",
		"onLanguage:objective-c",
		"onLanguage:objective-cpp",
		"workspaceContains:.ccls",
		"workspaceContains:compile_commands.json",
		"workspaceContains:**/CMakeLists.txt"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [],
		"configuration": {
			"type": "object",
			"title": "cclsext",
			"properties": {
				"cclsext.changeDatabaseCompiler": {
					"type": "object",
					"default": {
						"windows": {
							"compiler": "cl.exe",
							"value": "/usr/bin/clang++"
						},
						"linux": {
							"compiler": "",
							"value": ""
						}
					},
					"description": "Automatically convert compiler of database to new value."
				},
				"cclsext.restartOnCmakeConfigured": {
					"type": "boolean",
					"default": true,
					"description": "Automatically restart ccls when cmake tools configure completed."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"test-compile": "tsc -p ./",
		"test-watch": "tsc -watch -p ./",
		"pretest": "npm run test-compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.59.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.2.2",
		"@types/node": "14.x",
		"eslint": "^7.27.0",
		"@typescript-eslint/eslint-plugin": "^4.26.0",
		"@typescript-eslint/parser": "^4.26.0",
		"glob": "^7.1.7",
		"mocha": "^8.4.0",
		"typescript": "^4.3.2",
		"vscode-test": "^1.5.2",
		"ts-loader": "^9.2.2",
		"webpack": "^5.38.1",
		"webpack-cli": "^4.7.0"
	},
	"extensionDependencies":["ms-vscode.cmake-tools"]
}